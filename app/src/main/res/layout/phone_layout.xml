    <Button
            android:text="切換到TV界面"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            android:id="@+id/toTV"/>
</RelativeLayout>